.dropdown
    visibility hidden
    opacity 0
    position absolute
    background $gray
    top 100%
    left 0
    width 100%
    padding $spacing-base 0
    z-index $layer-dropdown
    box-shadow $shadow-level-1
    transition: visibility 0s linear $transition-base, opacity $transition-base linear
    
    > a
        display block
        font-size $font-size-large
        padding $spacing-base $spacing-large
        color $black
        
        &:hover
            background darken($gray, 10%)
        
    > .separator
        display block
        margin $spacing-base 0
        height $border-width-base
        background darken($gray, 10%)
        
    &.dropdown-right
        right 0
        left auto
        
    &.shown
        display block
        visibility visible
        opacity 1
        transition-delay 0s
        
@media (min-width: $breakpoint-md)

    .dropdown
        min-width 10rem
        max-width 15rem
        border-radius 0 0 $radius-base $radius-base